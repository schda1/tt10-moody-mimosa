{
  "verilog.linting.linter": "verilator",
  "verilog.formatting.verilogHDL.formatter": "verible-verilog-format",

  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },

  "black-formatter.args": [
    "--line-length",
    "100"
  ],

  "clang-format.style": "file", 
  "clang-format.fallbackStyle": "Google", 

  "files.associations": {
    "app.h": "c",
    "timer_mock.h": "c",
    "gpio_mock.h": "c",
    "ranges": "cpp",
    "optional": "c",
    "system_error": "c",
    "array": "c",
    "functional": "c",
    "tuple": "c",
    "type_traits": "c",
    "utility": "c",
    "istream": "c",
    "ostream": "c",
    "string": "c",
    "string_view": "c",
    "*.tcc": "cpp",
    "initializer_list": "cpp",
    "main.h": "c",
    "atomic": "cpp",
    "deque": "cpp",
    "list": "cpp",
    "unordered_map": "cpp",
    "vector": "cpp",
    "iterator": "cpp",
    "memory_resource": "cpp",
    "new": "cpp",
    "stdexcept": "cpp",
    "streambuf": "cpp",
    "memory": "cpp"
  }
}

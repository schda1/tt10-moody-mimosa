{
  "verilog.linting.linter": "verilator",
  "verilog.formatting.verilogHDL.formatter": "verible-verilog-format",

  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },

  "black-formatter.args": [
    "--line-length",
    "100"
  ],
  "files.associations": {
    "app.h": "c"
  }
}
